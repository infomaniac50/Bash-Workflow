#!/bin/bash

function meta()
{
  if [[ -z "$1" ]]; then
    echo "meta requires at least one argument."
    return 1
  fi

  case $(type -t "$1") in
    function)
      echo -n "function "
      type "$1" | tail -n+2
      ;;
    *)
      echo "Currently only functions are implemented."
      ;;
  esac
}
